extends layout
block content
	script(src='/js/client.js')
	script.
		roomID = '#{room._id}';
		//user 1 is current user
		user1 = '#{userIDs[0]}';
		user1username = '#{usersInRoom[0]}';
		// user 2 is peer
		user2username = '#{usersInRoom[1]}';
	.container
		include includes/nav.jade
		.chatRoom
			if (room)
				h1#user2 #{usersInRoom[1]}
				.displayMessagesWrap
					ul#incoming
				.sendMessagesWrap
					input#outgoing(type='text')
					.chatOptions
						.chat-btn#chat-btn-image
							img(src='/images/icon-image.png')
						.chat-btn#chat-btn-video
							img(src='/images/icon-switchToVideo.png')
						.chat-btn#chat-btn-block
							img(src='/images/icon-block.png')
						button.chat-btn#outgoingSubmit(type='submit') Submit
				.videoWrap
					.videoDisplay
						video#remoteVideo
						video#localVideo
						.videoOptions
							.chat-btn#switchToChat
								img(src='/images/icon-switchToChat.png')
							.chat-btn#callButton
								img(src='/images/icon-phone.png')
							.chat-btn#muteButton
								img(src='/images/icon-video-btn-mute.png')
							.chat-btn#hangupButton
								img(src='/images/icon-video-btn-hangup.png')
