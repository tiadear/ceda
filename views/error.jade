extends layout
block content
	.container
		.errorWrap
			h1 Error
			.error
				if (status === 500)
					h2 Sorry, looks like something went wrong.
				if (status === 404)
					h2 Woops! Looks like you got a bit lost!
				.errorImage
					img(src="/images/error_#{status}.png")
				a(href="/")
					button#retry(type="button") Go back
				//-h2= message