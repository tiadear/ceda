extends layout
block content
	.container
		if (!user)
			.open
				.logo
					img#logo(src='/images/ceda2.png')
				h1 Login
				.social-login
					a(href="/auth/facebook")
						.social-btn#login-fb
							img(src='/images/facebook.png')
					a(href="/auth/twitter")
						.social-btn#login-tw
							img(src='/images/twitter.png')
					a(href="/auth/google")
						.social-btn#login-go
							img(src='/images/googleplus.png')
				form.form-login(role='form', action="/login", method="POST")
					input.form-input(type="text", name="email", placeholder="Email")
					input.form-input(type="password", name="password", placeholder="Password")
					button.form-submit(type="submit") Submit
					a.forgot(href="forgot") I forgot my password
				.notamember
					p Not a member? 
					a.signup(href="/signup") Sign Up
		if (user)
			include includes/nav.jade
			if (user.username)
				h1 Hi #{user.username}
				.circle
				.history
					ul.recentHistory
						li.historyItem
							.subject
								p #{history}
							.time
							.icon
								img(src='images/icon-phone.png')
				.base
					.logout
						a(href="/logout") Logout
						br
						a(href='/deleteaccount') Delete my account
			else
				form.usernameRequest(role='form', method='post', action='/username')
					p Plesae provide a username
					p Remember ceda is anonymous so choose a username that won't reveal any details about you
					p So don't choose your twitter handle
					input.form-input(type='text', name='username', placeholder='Username')
					input(type='hidden', name='email', value='#{user.email}')
					button.form-submit(type="submit") Submit

