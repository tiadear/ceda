extends layout

block content
	.container
		if (!user)
			a(href="/login") Login
			br
			a(href="/register") Register
		if (user)
			p You are currently logged in as #{user.username}
			a(href="/logout") Logout
			div.dashoption
				div#option1
					a(href="/chat") Chat
				div#option2
					a(href="/settings") Settings
				div#option3
					a(href="/forum") Forum

