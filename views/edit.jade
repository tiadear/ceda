extends layout
block content
	.container
		.forumWrap
			h1 Edit Post
			if (post.top === true)
				.newPost
					form.form-post(role='form', action="/forum/thread?id=#{thread._id}", method="POST")
						input.form-input(type="text", name="title", placeholder="Title")
						input.form-input(type="text", name="content", placeholder="What did you want to say?")
						input(type="hidden", name="postID", value="#{post._id}")
						button.form-submit(type="submit") Submit
						a.forgot(href="/forum/thread?id=#{thread._id}") Cancel
			else 
				.newPost
					form.form-post(role='form', action="/forum/thread?id=#{thread._id}", method="POST")
						input.form-input(type="text", name="content", placeholder="What did you want to say?")
						input(type="hidden", name="postID", value="#{post._id}")
						button.form-submit(type="submit") Submit
						a.forgot(href="/forum/thread?id=#{thread._id}") Cancel