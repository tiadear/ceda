extends layout
block content
	.container
		include includes/nav-simple.jade
		.forumWrap
			h1 Edit Post
			if (message.length > 0)
				.alert #{message}
			if (post.top === true)
				.newPost
					form.form-post(role='form', action="/forum/thread?id=#{thread._id}", method="POST")
						input.form-input(type="text", name="title", placeholder="#{thread.title}", value="#{thread.title}")
						textarea.form-input(cols="30", rows="10", name="content", placeholder="#{post.content}", style="height: auto;") #{post.content}
						input(type="hidden", name="postID", value="#{post._id}")
						input(type="hidden", name="postTime", value="#{post.created}")
						button.form-submit(type="submit") Submit
						a.forgot(href="/forum/thread?id=#{thread._id}") Cancel
			else 
				.newPost
					form.form-post(role='form', action="/forum/thread?id=#{thread._id}", method="POST")
						textarea.form-input(cols="30", rows="10", name="content", placeholder="#{post.content}", style="height: auto;") #{post.content}
						input(type="hidden", name="postID", value="#{post._id}")
						input(type="hidden", name="postTime", value="#{post.created}")
						button.form-submit(type="submit") Submit
						a.forgot(href="/forum/thread?id=#{thread._id}") Cancel